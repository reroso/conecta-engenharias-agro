            <div class="alert alert-warning">
                <%= warning %>
            </div>
        <% } %>
        
        <% if (typeof info !== 'undefined' && info) { %>
            <div class="alert alert-info">
                <%= info %>
            </div>
        <% } %>

        <!-- Page Content -->
        <%- body %>
    </main>

